/* pages/order/orderDetail.wxss */
.border-bottom{
  border-bottom: 1rpx solid #ddd;
}
.container{
  background: #fff;
  color: #777;
}
.padding{
  padding:20rpx;
}

.order-title {
  font-size: 32rpx;
}


.goods{
  flex: 1;
  width: 0;
}
.goods .title{
  font-size: 30rpx;
}

.goods .row>view{
  padding: 10rpx 0;
}

.goods-info {
  display: flex;
  align-items: center;
}
.goods-info .number{
  font-size: 28rpx;
  padding: 0 20rpx;
}
.goods-info image{
  width: 200rpx;
  height: 200rpx;
  padding: 0 20rpx;
}

.money>view>text:last-child{
  color: orange
}
