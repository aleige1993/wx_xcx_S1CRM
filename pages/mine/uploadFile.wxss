/* pages/mine/uploadFile.wxss */
.container{
  background:#fff;

}
.upload-box{
  margin:30rpx;
  border:1rpx dotted #eee;
  min-height: 300rpx;
  font-size:36rpx;
  text-align: center;
  position: relative;
}

.upload-box .reason{
  position: absolute;
  top: 0;
  left: 0;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff6600;
}
.icon-add{
  font-size:56rpx;
}
.add-image{
  transform: translateY(50%);
}
.img{
  position: absolute;
  top:0;left:0;
  width: 100%;
  height: 100%;
}